<Affixes>
	<!--
		ForResource - типы ресурсов, на которые действуют аффиксы. 
		Действие, естественно, распространяется и на дочерние ресурсы.
		modifications: через ; прописаны имена характеристик и два числа, указывающие диапазон изменения в процентах.
	-->
	<ForResource Name = "CABIN">
		<Prefixes>
			<AffixGroup Name = "common" order = "1">
				<Affix Name = "useless_cabin"		modifications = "MaxDurability -10 -15; MaxSpeed -10 -15; MaxTorque -10 -15; Price +25 +30" />
				<Affix Name = "rusty_cabin"		modifications = "MaxDurability -5 -7; MaxSpeed -5 -7; MaxTorque -5 -7; Price +15 +20" />
				<Affix Name = "excellent_cabin"		modifications = "MaxDurability +5 +7; MaxSpeed +5 +7; MaxTorque +5 +7; Price -15 -20" />
				<Affix Name = "advanced_cabin"		modifications = "MaxDurability +10 +15; MaxSpeed +10 +15; MaxTorque +10 +15; Price -25 -30" />
			</AffixGroup>
		</Prefixes>
	</ForResource>

	<ForResource Name = "BASKET">
		<Prefixes>
			<AffixGroup Name = "common" order = "1">
				<Affix Name = "useless_basket"		modifications = "MaxDurability -10 -15" />
				<Affix Name = "rusty_basket"		modifications = "MaxDurability -5 -7" />
				<Affix Name = "excellent_basket"	modifications = "MaxDurability +5 +7" />
				<Affix Name = "advanced_basket"		modifications = "MaxDurability +10 +15" />
			</AffixGroup>
                </Prefixes>
	</ForResource>



	<ForResource Name = "GUN">
		<Prefixes>
			<AffixGroup Name = "common" order = "1">
				<Affix Name = "useless_gun"		modifications = "MaxDurability -10 -15; Damage -10 -15; Accuracy -10 -15; Price +25 +30" />
				<Affix Name = "rusty_gun"		modifications = "MaxDurability -5 -7; Damage -5 -7; Accuracy -5 -7; Price +10 +15" />
				<Affix Name = "excellent_gun"		modifications = "MaxDurability +5 +7; Damage +5 +7; Accuracy +5 +7; Price -10 -15" />
				<Affix Name = "advanced_gun"		modifications = "MaxDurability +10 +15; Damage +10 +15; Accuracy +10 +15; Price -25 -30" />
			</AffixGroup>
			
			<AffixGroup Name = "firing_rate" order = "2">
				<Affix Name = "slow_gun"			modifications = "FiringRate -5 -7" />
				<Affix Name = "assault_gun"			modifications = "FiringRate +5 +7" />
				<Affix Name = "rapid_firing_gun"		modifications = "FiringRate +10 +15" />
			</AffixGroup>

			<AffixGroup Name = "damage" order = "2">
				<Affix Name = "weak_gun"			modifications = "Damage -5 -7" />
				<Affix Name = "deadly_gun"			modifications = "Damage +5 +7"/>
				<Affix Name = "destructive_gun"			modifications = "Damage +10 +15"/>
			</AffixGroup>
		</Prefixes>
		
		<Suffixes>
			<AffixGroup Name = "firing_range" order = "2">
				<Affix Name = "with_truncated_barrel_gun"	modifications = "FiringRange -5 -7" />
				<Affix Name = "with_enlarged_barrel_gun"	modifications = "FiringRange +5 +7" />
				<Affix Name = "with_long_barrel_gun"		modifications = "FiringRange +10 +15" />
			</AffixGroup>

			<AffixGroup Name = "scope" order = "2">
				<Affix Name = "without_sight_gun"	modifications = "Accuracy -5 -7" />
				<Affix Name = "with_laser_sight_gun"	modifications = "Accuracy +5 +7" />
				<Affix Name = "with_electric_sight_gun"	modifications = "Accuracy +10 +15" />
			</AffixGroup>

			<AffixGroup Name = "cooling_system" order = "2">
				<Affix Name = "without_cooling_gun"	modifications = "ReChargingTime +5 +7" />
				<Affix Name = "with_water_cooling_gun"	modifications = "ReChargingTime -5 -7" />
				<Affix Name = "with_nitro_cooling_gun"	modifications = "ReChargingTime -10 -15" />
			</AffixGroup>

	
		</Suffixes>
	</ForResource>			
</Affixes>